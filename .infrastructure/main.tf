##################################################################################
# VARIABLES
##################################################################################

variable "aws_access_key" {}
variable "aws_secret_key" {}
variable "region" {
  default = "us-east-1"
}
variable "bucket_name_prefix" {}
variable "environment_tag" {}

##################################################################################
# locals
##################################################################################

locals {
  common_tags = {
    Environment = var.environment_tag
  }
}

##################################################################################
# PROVIDERS
##################################################################################

provider "aws" {
  access_key = var.aws_access_key
  secret_key = var.aws_secret_key
  region     = var.region
}

##################################################################################
# DATA
##################################################################################


##################################################################################
# RESOURCES
##################################################################################


resource "aws_s3_bucket" "hyena_bucket" {
  bucket        = var.bucket_name
  acl           = "private"
  force_destroy = true

  tags = merge(local.common_tags, { Name = "${var.environment_tag}-hyena-bucket" })
}

##################################################################################
# OUTPUT
##################################################################################
